<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cherry Blossom Tea Garden Explorer</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }
        #info {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            background: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 5px;
            font-size: 14px;
            z-index: 100;
        }
        #loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 24px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <div id="info">
        WASD/Arrow Keys: Move<br>
        Mouse: Look Around<br>
        Space: Jump<br>
        Shift: Run
    </div>
    <div id="loading">Loading Tea Garden...</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        // Scene setup
        const scene = new THREE.Scene();
        scene.fog = new THREE.Fog(0xffd4e5, 10, 200);
        
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.set(0, 2, 5);
        
        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        renderer.setClearColor(0x87CEEB);
        document.body.appendChild(renderer.domElement);
        
        // Hide loading message
        setTimeout(() => {
            document.getElementById('loading').style.display = 'none';
        }, 1000);
        
        // Lighting
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
        scene.add(ambientLight);
        
        const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
        directionalLight.position.set(50, 100, 50);
        directionalLight.castShadow = true;
        directionalLight.shadow.camera.left = -50;
        directionalLight.shadow.camera.right = 50;
        directionalLight.shadow.camera.top = 50;
        directionalLight.shadow.camera.bottom = -50;
        directionalLight.shadow.camera.near = 0.1;
        directionalLight.shadow.camera.far = 200;
        scene.add(directionalLight);
        
        // Materials
        const grassMaterial = new THREE.MeshLambertMaterial({ color: 0x3a5f3a });
        const waterMaterial = new THREE.MeshPhongMaterial({ 
            color: 0x4682B4, 
            shininess: 100,
            transparent: true,
            opacity: 0.8
        });
        const stoneMaterial = new THREE.MeshLambertMaterial({ color: 0x808080 });
        const woodMaterial = new THREE.MeshLambertMaterial({ color: 0x8B4513 });
        const trunkMaterial = new THREE.MeshLambertMaterial({ color: 0x4a3c28 });
        
        // Terrain chunks
        const chunkSize = 50;
        const chunks = new Map();
        const loadedChunks = new Set();
        
        // Cherry blossom particle system
        const blossomGeometry = new THREE.BufferGeometry();
        const blossomCount = 5000;
        const positions = new Float32Array(blossomCount * 3);
        const velocities = new Float32Array(blossomCount * 3);
        
        for (let i = 0; i < blossomCount * 3; i += 3) {
            positions[i] = (Math.random() - 0.5) * 100;
            positions[i + 1] = Math.random() * 20 + 5;
            positions[i + 2] = (Math.random() - 0.5) * 100;
            
            velocities[i] = (Math.random() - 0.5) * 0.02;
            velocities[i + 1] = -Math.random() * 0.05 - 0.02;
            velocities[i + 2] = (Math.random() - 0.5) * 0.02;
        }
        
        blossomGeometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
        
        const blossomMaterial = new THREE.PointsMaterial({
            color: 0xffb7c5,
            size: 0.3,
            transparent: true,
            opacity: 0.8
        });
        
        const blossomParticles = new THREE.Points(blossomGeometry, blossomMaterial);
        scene.add(blossomParticles);
        
        // Helper functions
        function createCherryTree(x, z) {
            const tree = new THREE.Group();
            
            // Trunk
            const trunkGeometry = new THREE.CylinderGeometry(0.3, 0.5, 4, 8);
            const trunk = new THREE.Mesh(trunkGeometry, trunkMaterial);
            trunk.position.y = 2;
            trunk.castShadow = true;
            tree.add(trunk);
            
            // Branches
            for (let i = 0; i < 3; i++) {
                const branchGeometry = new THREE.CylinderGeometry(0.1, 0.2, 2, 6);
                const branch = new THREE.Mesh(branchGeometry, trunkMaterial);
                branch.position.set(
                    Math.random() * 1 - 0.5,
                    3 + Math.random(),
                    Math.random() * 1 - 0.5
                );
                branch.rotation.z = (Math.random() - 0.5) * 0.5;
                branch.rotation.x = (Math.random() - 0.5) * 0.5;
                branch.castShadow = true;
                tree.add(branch);
            }
            
            // Cherry blossoms (pink spheres)
            const blossomPositions = [
                [0, 4, 0], [1, 3.5, 0], [-1, 3.5, 0], 
                [0, 3.5, 1], [0, 3.5, -1], [0.7, 4, 0.7],
                [-0.7, 4, 0.7], [0.7, 4, -0.7], [-0.7, 4, -0.7]
            ];
            
            blossomPositions.forEach(pos => {
                const blossomGeometry = new THREE.SphereGeometry(1.2, 8, 6);
                const blossomMaterial = new THREE.MeshLambertMaterial({ 
                    color: 0xffb7c5,
                    transparent: true,
                    opacity: 0.9
                });
                const blossom = new THREE.Mesh(blossomGeometry, blossomMaterial);
                blossom.position.set(...pos);
                blossom.scale.setScalar(0.8 + Math.random() * 0.4);
                blossom.castShadow = true;
                tree.add(blossom);
            });
            
            tree.position.set(x, 0, z);
            return tree;
        }
        
        function createStoneGarden(x, z) {
            const garden = new THREE.Group();
            
            // Sand base
            const sandGeometry = new THREE.CircleGeometry(5, 16);
            const sandMaterial = new THREE.MeshLambertMaterial({ color: 0xC2B280 });
            const sand = new THREE.Mesh(sandGeometry, sandMaterial);
            sand.rotation.x = -Math.PI / 2;
            sand.position.y = 0.01;
            sand.receiveShadow = true;
            garden.add(sand);
            
            // Stones
            for (let i = 0; i < 3; i++) {
                const stoneGeometry = new THREE.SphereGeometry(0.5 + Math.random() * 0.5, 8, 6);
                const stone = new THREE.Mesh(stoneGeometry, stoneMaterial);
                stone.position.set(
                    (Math.random() - 0.5) * 4,
                    0.3,
                    (Math.random() - 0.5) * 4
                );
                stone.scale.y = 0.6;
                stone.castShadow = true;
                garden.add(stone);
            }
            
            garden.position.set(x, 0, z);
            return garden;
        }
        
        function createTeaHouse(x, z) {
            const house = new THREE.Group();
            
            // Platform
            const platformGeometry = new THREE.BoxGeometry(6, 0.3, 6);
            const platform = new THREE.Mesh(platformGeometry, woodMaterial);
            platform.position.y = 0.15;
            platform.receiveShadow = true;
            platform.castShadow = true;
            house.add(platform);
            
            // Pillars
            const pillarPositions = [
                [-2.5, 0, -2.5], [2.5, 0, -2.5],
                [-2.5, 0, 2.5], [2.5, 0, 2.5]
            ];
            
            pillarPositions.forEach(pos => {
                const pillarGeometry = new THREE.CylinderGeometry(0.2, 0.2, 3, 8);
                const pillar = new THREE.Mesh(pillarGeometry, woodMaterial);
                pillar.position.set(pos[0], 1.8, pos[2]);
                pillar.castShadow = true;
                house.add(pillar);
            });
            
            // Roof
            const roofGeometry = new THREE.ConeGeometry(5, 2, 4);
            const roofMaterial = new THREE.MeshLambertMaterial({ color: 0x8B4513 });
            const roof = new THREE.Mesh(roofGeometry, roofMaterial);
            roof.position.y = 4;
            roof.rotation.y = Math.PI / 4;
            roof.castShadow = true;
            house.add(roof);
            
            house.position.set(x, 0, z);
            return house;
        }
        
        function createKoiPond(x, z) {
            const pond = new THREE.Group();
            
            // Water
            const pondGeometry = new THREE.CircleGeometry(4, 16);
            const water = new THREE.Mesh(pondGeometry, waterMaterial);
            water.rotation.x = -Math.PI / 2;
            water.position.y = -0.2;
            water.receiveShadow = true;
            pond.add(water);
            
            // Pond edge
            const edgeGeometry = new THREE.TorusGeometry(4, 0.3, 8, 16);
            const edge = new THREE.Mesh(edgeGeometry, stoneMaterial);
            edge.rotation.x = -Math.PI / 2;
            edge.position.y = 0;
            edge.castShadow = true;
            pond.add(edge);
            
            pond.position.set(x, 0, z);
            return pond;
        }
        
        function createChunk(chunkX, chunkZ) {
            const chunk = new THREE.Group();
            const key = `${chunkX},${chunkZ}`;
            
            // Ground
            const groundGeometry = new THREE.PlaneGeometry(chunkSize, chunkSize);
            const ground = new THREE.Mesh(groundGeometry, grassMaterial);
            ground.rotation.x = -Math.PI / 2;
            ground.receiveShadow = true;
            chunk.add(ground);
            
            // Random seed based on chunk position
            const seed = chunkX * 1000 + chunkZ;
            Math.random(); // Consume one random number to add variation
            
            // Add cherry trees
            const treeCount = 3 + Math.floor(Math.random() * 3);
            for (let i = 0; i < treeCount; i++) {
                const x = (Math.random() - 0.5) * (chunkSize - 10);
                const z = (Math.random() - 0.5) * (chunkSize - 10);
                chunk.add(createCherryTree(x, z));
            }
            
            // Add features based on chunk position
            if ((chunkX + chunkZ) % 3 === 0) {
                chunk.add(createStoneGarden(
                    (Math.random() - 0.5) * 20,
                    (Math.random() - 0.5) * 20
                ));
            }
            
            if ((chunkX * chunkZ) % 4 === 0) {
                chunk.add(createKoiPond(
                    (Math.random() - 0.5) * 20,
                    (Math.random() - 0.5) * 20
                ));
            }
            
            if (Math.abs(chunkX + chunkZ) % 5 === 0) {
                chunk.add(createTeaHouse(
                    (Math.random() - 0.5) * 20,
                    (Math.random() - 0.5) * 20
                ));
            }
            
            chunk.position.set(chunkX * chunkSize, 0, chunkZ * chunkSize);
            chunks.set(key, chunk);
            scene.add(chunk);
            loadedChunks.add(key);
        }
        
        // Player movement
        const movement = {
            forward: false,
            backward: false,
            left: false,
            right: false,
            jump: false,
            shift: false
        };
        
        let yVelocity = 0;
        const gravity = -0.015;
        const jumpPower = 0.3;
        let isGrounded = true;
        
        // Mouse look
        let mouseX = 0;
        let mouseY = 0;
        let phi = 0;
        let theta = 0;
        
        document.addEventListener('mousemove', (e) => {
            if (document.pointerLockElement === renderer.domElement) {
                mouseX += e.movementX;
                mouseY += e.movementY;
                
                phi = (mouseY * 0.005) % Math.PI;
                phi = Math.max(-Math.PI / 2 + 0.1, Math.min(Math.PI / 2 - 0.1, phi));
                theta = (mouseX * 0.005) % (Math.PI * 2);
            }
        });
        
        renderer.domElement.addEventListener('click', () => {
            renderer.domElement.requestPointerLock();
        });
        
        // Keyboard controls
        document.addEventListener('keydown', (e) => {
            switch(e.key.toLowerCase()) {
                case 'w': case 'arrowup': movement.forward = true; break;
                case 's': case 'arrowdown': movement.backward = true; break;
                case 'a': case 'arrowleft': movement.left = true; break;
                case 'd': case 'arrowright': movement.right = true; break;
                case ' ': if (isGrounded) { movement.jump = true; yVelocity = jumpPower; } break;
                case 'shift': movement.shift = true; break;
            }
        });
        
        document.addEventListener('keyup', (e) => {
            switch(e.key.toLowerCase()) {
                case 'w': case 'arrowup': movement.forward = false; break;
                case 's': case 'arrowdown': movement.backward = false; break;
                case 'a': case 'arrowleft': movement.left = false; break;
                case 'd': case 'arrowright': movement.right = false; break;
                case 'shift': movement.shift = false; break;
            }
        });
        
        // Update terrain loading
        function updateTerrain() {
            const playerChunkX = Math.floor(camera.position.x / chunkSize);
            const playerChunkZ = Math.floor(camera.position.z / chunkSize);
            const renderDistance = 3;
            
            // Load new chunks
            for (let x = -renderDistance; x <= renderDistance; x++) {
                for (let z = -renderDistance; z <= renderDistance; z++) {
                    const chunkX = playerChunkX + x;
                    const chunkZ = playerChunkZ + z;
                    const key = `${chunkX},${chunkZ}`;
                    
                    if (!loadedChunks.has(key)) {
                        createChunk(chunkX, chunkZ);
                    }
                }
            }
            
            // Unload distant chunks
            loadedChunks.forEach(key => {
                const [x, z] = key.split(',').map(Number);
                const distance = Math.max(
                    Math.abs(x - playerChunkX),
                    Math.abs(z - playerChunkZ)
                );
                
                if (distance > renderDistance + 1) {
                    const chunk = chunks.get(key);
                    scene.remove(chunk);
                    chunks.delete(key);
                    loadedChunks.delete(key);
                }
            });
        }
        
        // Animation loop
        let clock = new THREE.Clock();
        
        function animate() {
            requestAnimationFrame(animate);
            
            const delta = clock.getDelta();
            const speed = movement.shift ? 0.3 : 0.15;
            
            // Update camera rotation
            const lookDirection = new THREE.Vector3(
                Math.sin(theta) * Math.cos(phi),
                Math.sin(phi),
                Math.cos(theta) * Math.cos(phi)
            );
            
            camera.lookAt(
                camera.position.x + lookDirection.x,
                camera.position.y + lookDirection.y,
                camera.position.z + lookDirection.z
            );
            
            // Movement
            const forward = new THREE.Vector3(Math.sin(theta), 0, Math.cos(theta));
            const right = new THREE.Vector3(Math.sin(theta + Math.PI / 2), 0, Math.cos(theta + Math.PI / 2));
            
            if (movement.forward) camera.position.addScaledVector(forward, speed);
            if (movement.backward) camera.position.addScaledVector(forward, -speed);
            if (movement.left) camera.position.addScaledVector(right, -speed);
            if (movement.right) camera.position.addScaledVector(right, speed);
            
            // Gravity and ground check
            yVelocity += gravity;
            camera.position.y += yVelocity;
            
            if (camera.position.y <= 2) {
                camera.position.y = 2;
                yVelocity = 0;
                isGrounded = true;
                movement.jump = false;
            } else {
                isGrounded = false;
            }
            
            // Update blossom particles
            const positions = blossomParticles.geometry.attributes.position.array;
            for (let i = 0; i < positions.length; i += 3) {
                positions[i] += velocities[i];
                positions[i + 1] += velocities[i + 1];
                positions[i + 2] += velocities[i + 2];
                
                // Reset particles that fall too low
                if (positions[i + 1] < 0) {
                    positions[i] = camera.position.x + (Math.random() - 0.5) * 100;
                    positions[i + 1] = Math.random() * 20 + 15;
                    positions[i + 2] = camera.position.z + (Math.random() - 0.5) * 100;
                }
                
                // Wind effect
                positions[i] += Math.sin(Date.now() * 0.001 + i) * 0.01;
            }
            blossomParticles.geometry.attributes.position.needsUpdate = true;
            
            // Update terrain
            updateTerrain();
            
            renderer.render(scene, camera);
        }
        
        // Handle window resize
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
        
        // Start with initial chunks
        updateTerrain();
        animate();
    </script>
</body>
</html>
